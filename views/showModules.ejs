
<style>
    table th , td{
        border: 1px solid black;
    }
</style>

<h1>Modules</h1>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Course</th>
        <th>Update</th>
        <th>List</th>
    </tr>
    <% modules.forEach((module)=>
        { %>
        <tr>
            <td>
                <%= module.mid %>
            </td>
            <td>
                <%= module.name %>
            </td>
            <td>
                <%= module.credits %>
            </td>
            <td>
                <a href = "/module/edit/<%=module.mid%>">Update</a>
            </td>
            <td>
                <a href = "/module/students/<%=module.mid%>">List</a>
            </td>
        </tr>
        <% }) %>
    </table>

    <a href = "/">Home</a>