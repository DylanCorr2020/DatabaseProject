<h1>Add Student</h1>

<% if (errors != undefined) { %>
<ul>
    <% errors.forEach((error) => { %>
      <li><%= error.msg %></li>
   <% }) %>
</ul>
<% } %>

<form action="/addStudent" method = "POST">
    <label>Student ID:</label><br>
    <input type="text" name="sid"><br>
    <label> Name:</label><br>
    <input type="text" name="name"><br><br>
    <label> GPA </label><br>
    <input type="number" name="gpa"><br><br>
    <input type="submit" value="Add">

    <a href = "/">Home </a>
</form>